<odoo>
    <data>
        <!-- Form View for Change State Wizard -->
        <record id="view_change_state_wizard_form" model="ir.ui.view">
            <field name="name">change state wizard form</field>
            <field name="model">change.state</field>
            <field name="arch" type="xml">
                <form string="Change State">
                    <group>
                        <field name="property_id" invisible="1"/>
                        <field name="state" required="1"/>
                        <field name="reason" required="1"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for Change State Wizard -->
        <record id="action_change_state_wizard" model="ir.actions.act_window">
            <field name="name">Change State</field>
            <field name="res_model">change.state</field>
            <field name="target">new</field>
            <field name="view_mode">form</field>
            <!-- <field name="view_id" ref="view_change_state_wizard_form"/> -->
        </record>
    </data>
</odoo>
